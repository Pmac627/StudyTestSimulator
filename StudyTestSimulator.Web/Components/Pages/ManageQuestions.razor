@page "/manage-questions"
@using Microsoft.AspNetCore.Authorization
@using StudyTestSimulator.Web.Services
@using StudyTestSimulator.Web.Models
@inject ICategoryService CategoryService
@inject IQuestionService QuestionService
@inject AuthenticationStateProvider AuthenticationStateProvider
@attribute [Authorize]

<PageTitle>Manage Questions</PageTitle>

<div class="container mt-4">
    <h1 class="mb-4">Manage Questions</h1>

    <div class="row mb-4">
        <div class="col-md-6">
            <label class="form-label">Select Category</label>
            <select class="form-select" @bind="selectedCategoryId" @bind:after="LoadQuestions">
                <option value="0">-- Select a category --</option>
                @if (categories != null)
                {
                    @foreach (var category in categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                }
            </select>
        </div>
        <div class="col-md-6 d-flex align-items-end">
            <button class="btn btn-primary me-2" @onclick="ShowAddQuestionModal" disabled="@(selectedCategoryId == 0)">
                <i class="bi bi-plus-circle"></i> Add Question
            </button>
            <button class="btn btn-success" @onclick="ShowImportModal" disabled="@(selectedCategoryId == 0)">
                <i class="bi bi-file-earmark-arrow-up"></i> Import from JSON
            </button>
        </div>
    </div>

    @if (questions != null && questions.Any())
    {
        <div class="accordion" id="questionsAccordion">
            @for (int i = 0; i < questions.Count; i++)
            {
                var question = questions[i];
                var index = i;
                <div class="accordion-item" @key="question.Id">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapse@(question.Id)">
                            Question @(index + 1): @(question.QuestionText.Length > 100 ? question.QuestionText.Substring(0, 100) + "..." : question.QuestionText)
                            @if (question.Flags.Any(f => !f.IsResolved))
                            {
                                <span class="badge bg-warning ms-2">Flagged</span>
                            }
                        </button>
                    </h2>
                    <div id="collapse@(question.Id)" class="accordion-collapse collapse" data-bs-parent="#questionsAccordion">
                        <div class="accordion-body">
                            <p><strong>Question:</strong> @question.QuestionText</p>
                            @{ var qImgSrc = !string.IsNullOrEmpty(question.ImageUrl) ? question.ImageUrl : question.ImageBase64; }
                            @if (!string.IsNullOrEmpty(qImgSrc))
                            {
                                <img src="@qImgSrc" class="img-fluid mb-3" style="max-width: 400px;" alt="Question image" />
                            }
                            <p><strong>Answers:</strong></p>
                            <ul class="list-unstyled">
                                @{ var orderedAnswers = question.Answers.OrderBy(a => a.DisplayOrder).ToList(); }
                                @for (int ai = 0; ai < orderedAnswers.Count; ai++)
                                {
                                    var answer = orderedAnswers[ai];
                                    <li class="mb-2 @(answer.IsCorrect ? "text-success" : "")">
                                        <span class="@(answer.IsCorrect ? "fw-bold" : "")">
                                            @((char)('A' + ai)). @answer.AnswerText
                                            @if (answer.IsCorrect)
                                            {
                                                <i class="bi bi-check-circle text-success"></i>
                                            }
                                        </span>
                                        @if (!string.IsNullOrEmpty(answer.Explanation))
                                        {
                                            <br /><small class="text-muted ms-3"><i class="bi bi-info-circle"></i> @answer.Explanation</small>
                                        }
                                    </li>
                                }
                            </ul>
                            <p class="text-muted small mt-3 mb-1">
                                <i class="bi bi-person"></i> Created by: @question.CreatedBy
                                <span class="ms-3"><i class="bi bi-calendar"></i> @question.CreatedDate.ToLocalTime().ToString("g")</span>
                            </p>
                            <div class="mt-2">
                                <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditQuestion(question)">
                                    <i class="bi bi-pencil"></i> Edit
                                </button>
                                <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteQuestion(question.Id)">
                                    <i class="bi bi-trash"></i> Delete
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
    else if (selectedCategoryId > 0)
    {
        <div class="alert alert-info">
            No questions in this category yet. Add your first question!
        </div>
    }
</div>

@if (showImportModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Import Questions from JSON</h5>
                    <button type="button" class="btn-close" @onclick="CloseImportModal"></button>
                </div>
                <div class="modal-body">
                    <p>Upload a JSON file. Expected format:</p>
                    <pre class="bg-light p-2" style="font-size: 0.85em;">
{
  "questions": [
    {
      "questionText": "Your question here?",
      "explanation": "Optional explanation",
      "imageBase64": "data:image/png;base64,... (optional)",
      "imageUrl": "https://example.com/image.png (optional)",
      "answers": [
        {
          "answerText": "Answer 1",
          "isCorrect": false,
          "explanation": "Optional explanation"
        },
        {
          "answerText": "Answer 2",
          "isCorrect": true,
          "explanation": "Optional explanation"
        }
      ]
    }
  ]
}
                    </pre>
                    <InputFile class="form-control" OnChange="HandleImportFileSelected" accept=".json" />
                    @if (importFile != null)
                    {
                        <div class="mt-2 text-muted small">
                            <i class="bi bi-file-earmark-check"></i> @importFile.Name (@FormatFileSize(importFile.Size))
                        </div>
                    }
                    @if (!string.IsNullOrEmpty(importErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">@importErrorMessage</div>
                    }
                    @if (!string.IsNullOrEmpty(importSuccessMessage))
                    {
                        <div class="alert alert-success mt-3">@importSuccessMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseImportModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="ImportQuestions" disabled="@(importFile == null)">
                        Import
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@if (showQuestionModal)
{
    <div class="modal show d-block" tabindex="-1" style="background-color: rgba(0,0,0,0.5);">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">@(editingQuestion?.Id > 0 ? "Edit" : "Add") Question</h5>
                    <button type="button" class="btn-close" @onclick="CloseQuestionModal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label class="form-label">Question Text <span class="text-danger">*</span></label>
                        <textarea class="form-control" rows="3" @bind="editingQuestion!.QuestionText"></textarea>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Image URL (optional)</label>
                        <input type="url" class="form-control" @bind="editingQuestion!.ImageUrl"
                               placeholder="https://example.com/image.png" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Or upload an image (optional)</label>
                        <InputFile class="form-control" OnChange="HandleImageUpload" accept=".jpg,.jpeg,.png,.gif,.webp" />
                        @{
                            var editImgSrc = !string.IsNullOrEmpty(editingQuestion!.ImageUrl) ? editingQuestion.ImageUrl : editingQuestion.ImageBase64;
                        }
                        @if (!string.IsNullOrEmpty(editImgSrc))
                        {
                            <div class="mt-2">
                                <img src="@editImgSrc" class="img-thumbnail" style="max-height: 150px;" alt="Preview" />
                                <button type="button" class="btn btn-sm btn-outline-danger ms-2" @onclick="RemoveImage">
                                    <i class="bi bi-x"></i> Remove
                                </button>
                            </div>
                        }
                    </div>

                    <hr />
                    <div class="d-flex justify-content-between align-items-center mb-3">
                        <h6 class="mb-0">Answers</h6>
                        <button type="button" class="btn btn-sm btn-outline-primary" @onclick="AddAnswerOption">
                            <i class="bi bi-plus"></i> Add Answer
                        </button>
                    </div>

                    @for (int i = 0; i < editingAnswers.Count; i++)
                    {
                        var index = i;
                        <div class="card mb-2">
                            <div class="card-body py-2">
                                <div class="row align-items-center mb-2">
                                    <div class="col-md-7">
                                        <input type="text" class="form-control form-control-sm"
                                               @bind="editingAnswers[index].AnswerText"
                                               placeholder="Answer text" />
                                    </div>
                                    <div class="col-md-3">
                                        <div class="form-check">
                                            <input type="checkbox" class="form-check-input"
                                                   id="correct_@index"
                                                   checked="@editingAnswers[index].IsCorrect"
                                                   @onchange="(e) => editingAnswers[index].IsCorrect = (bool)(e.Value ?? false)" />
                                            <label class="form-check-label" for="correct_@index">Correct</label>
                                        </div>
                                    </div>
                                    <div class="col-md-2 text-end">
                                        @if (editingAnswers.Count > 2)
                                        {
                                            <button type="button" class="btn btn-sm btn-outline-danger" @onclick="() => RemoveAnswerOption(index)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-12">
                                        <input type="text" class="form-control form-control-sm"
                                               @bind="editingAnswers[index].Explanation"
                                               placeholder="Explanation (why this answer is right/wrong)" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(questionErrorMessage))
                    {
                        <div class="alert alert-danger mt-3">@questionErrorMessage</div>
                    }
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseQuestionModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="SaveQuestion">Save Question</button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private List<TestCategory>? categories;
    private List<Question>? questions;
    private int selectedCategoryId = 0;
    private bool showImportModal = false;
    private Microsoft.AspNetCore.Components.Forms.IBrowserFile? importFile;
    private string? importErrorMessage;
    private string? importSuccessMessage;
    private string userId = string.Empty;
    private string userEmail = string.Empty;

    // Question modal state
    private bool showQuestionModal = false;
    private Question? editingQuestion;
    private List<Answer> editingAnswers = new();
    private string? questionErrorMessage;

    protected override async Task OnInitializedAsync()
    {
        var authState = await AuthenticationStateProvider.GetAuthenticationStateAsync();
        userId = authState.User.Identity?.Name ?? string.Empty;
        userEmail = authState.User.Claims.FirstOrDefault(c => c.Type == "preferred_username")?.Value ?? string.Empty;

        categories = await CategoryService.GetAllCategoriesAsync();
    }

    private async Task LoadQuestions()
    {
        if (selectedCategoryId > 0)
        {
            questions = await QuestionService.GetQuestionsByCategoryAsync(selectedCategoryId);
        }
        else
        {
            questions = null;
        }
    }

    private void ShowAddQuestionModal()
    {
        editingQuestion = new Question
        {
            QuestionText = "",
            CreatedBy = userId,
            TestCategoryId = selectedCategoryId
        };
        editingAnswers = new List<Answer>
        {
            new Answer { AnswerText = "", DisplayOrder = 1 },
            new Answer { AnswerText = "", DisplayOrder = 2 },
            new Answer { AnswerText = "", DisplayOrder = 3 },
            new Answer { AnswerText = "", DisplayOrder = 4 }
        };
        questionErrorMessage = null;
        showQuestionModal = true;
    }

    private void EditQuestion(Question question)
    {
        editingQuestion = new Question
        {
            Id = question.Id,
            QuestionText = question.QuestionText,
            Explanation = question.Explanation,
            ImageBase64 = question.ImageBase64,
            ImageUrl = question.ImageUrl,
            TestCategoryId = question.TestCategoryId,
            CreatedBy = question.CreatedBy,
            CreatedDate = question.CreatedDate,
            ModifiedBy = userId
        };
        editingAnswers = question.Answers.Select(a => new Answer
        {
            Id = a.Id,
            AnswerText = a.AnswerText,
            IsCorrect = a.IsCorrect,
            Explanation = a.Explanation,
            DisplayOrder = a.DisplayOrder
        }).OrderBy(a => a.DisplayOrder).ToList();

        // Ensure at least 4 answer slots
        while (editingAnswers.Count < 4)
        {
            editingAnswers.Add(new Answer { AnswerText = "", DisplayOrder = editingAnswers.Count + 1 });
        }

        questionErrorMessage = null;
        showQuestionModal = true;
    }

    private void CloseQuestionModal()
    {
        showQuestionModal = false;
        editingQuestion = null;
        editingAnswers.Clear();
        questionErrorMessage = null;
    }

    private static readonly string[] AllowedImageTypes = ["image/jpeg", "image/png", "image/gif", "image/webp"];

    private async Task HandleImageUpload(InputFileChangeEventArgs e)
    {
        var file = e.File;
        if (file != null && editingQuestion != null)
        {
            // Validate content type
            if (!AllowedImageTypes.Contains(file.ContentType.ToLower()))
            {
                questionErrorMessage = "Only JPEG, PNG, GIF, and WebP images are allowed.";
                return;
            }

            // Limit to 5MB
            const long maxSize = 5 * 1024 * 1024;
            if (file.Size > maxSize)
            {
                questionErrorMessage = "Image must be less than 5MB.";
                return;
            }

            using var stream = file.OpenReadStream(maxSize);
            using var memoryStream = new MemoryStream();
            await stream.CopyToAsync(memoryStream);
            var bytes = memoryStream.ToArray();
            var base64 = Convert.ToBase64String(bytes);
            editingQuestion.ImageBase64 = $"data:{file.ContentType};base64,{base64}";
            editingQuestion.ImageUrl = null; // Clear URL when uploading a file
            questionErrorMessage = null;
        }
    }

    private void RemoveImage()
    {
        if (editingQuestion != null)
        {
            editingQuestion.ImageBase64 = null;
            editingQuestion.ImageUrl = null;
        }
    }

    private void AddAnswerOption()
    {
        editingAnswers.Add(new Answer { AnswerText = "", DisplayOrder = editingAnswers.Count + 1 });
    }

    private void RemoveAnswerOption(int index)
    {
        if (editingAnswers.Count > 2)
        {
            editingAnswers.RemoveAt(index);
            // Reorder
            for (int i = 0; i < editingAnswers.Count; i++)
            {
                editingAnswers[i].DisplayOrder = i + 1;
            }
        }
    }

    private async Task SaveQuestion()
    {
        if (string.IsNullOrWhiteSpace(editingQuestion?.QuestionText))
        {
            questionErrorMessage = "Question text is required.";
            return;
        }

        var validAnswers = editingAnswers.Where(a => !string.IsNullOrWhiteSpace(a.AnswerText)).ToList();
        if (validAnswers.Count < 2)
        {
            questionErrorMessage = "At least 2 answers are required.";
            return;
        }

        if (!validAnswers.Any(a => a.IsCorrect))
        {
            questionErrorMessage = "At least one answer must be marked as correct.";
            return;
        }

        try
        {
            editingQuestion.Answers = validAnswers;

            if (editingQuestion.Id == 0)
            {
                editingQuestion.CreatedBy = userId;
                await QuestionService.CreateQuestionAsync(editingQuestion);
            }
            else
            {
                editingQuestion.ModifiedBy = userId;
                await QuestionService.UpdateQuestionAsync(editingQuestion);
            }

            await LoadQuestions();
            CloseQuestionModal();
        }
        catch (Exception ex)
        {
            questionErrorMessage = $"Error saving question: {ex.Message}";
        }
    }

    private async Task DeleteQuestion(int questionId)
    {
        await QuestionService.DeleteQuestionAsync(questionId);
        await LoadQuestions();
    }

    private void ShowImportModal()
    {
        showImportModal = true;
        importFile = null;
        importErrorMessage = null;
        importSuccessMessage = null;
    }

    private void CloseImportModal()
    {
        showImportModal = false;
        importFile = null;
        importErrorMessage = null;
        importSuccessMessage = null;
    }

    private void HandleImportFileSelected(InputFileChangeEventArgs e)
    {
        importFile = e.File;
        importErrorMessage = null;
        importSuccessMessage = null;
    }

    private async Task ImportQuestions()
    {
        importErrorMessage = null;
        importSuccessMessage = null;

        if (importFile == null) return;

        try
        {
            const long maxSize = 100 * 1024 * 1024; // 100MB for large files with base64 images
            using var stream = importFile.OpenReadStream(maxSize);
            var imported = await QuestionService.ImportQuestionsFromJsonAsync(stream, selectedCategoryId, userId, userEmail);
            importSuccessMessage = $"Successfully imported {imported.Count} question(s)!";
            await LoadQuestions();

            // Auto-close after 2 seconds
            await Task.Delay(2000);
            CloseImportModal();
        }
        catch (Exception ex)
        {
            importErrorMessage = $"Error importing questions: {ex.Message}";
        }
    }

    private static string FormatFileSize(long bytes)
    {
        if (bytes < 1024) return $"{bytes} B";
        if (bytes < 1024 * 1024) return $"{bytes / 1024.0:F1} KB";
        return $"{bytes / (1024.0 * 1024.0):F1} MB";
    }
}
